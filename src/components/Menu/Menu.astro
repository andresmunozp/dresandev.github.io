---
import { Logo } from "../UI";
import { CloseMenuBtn, MenuNavigation, MenuOptions } from "./";
---

<div class="menu">
  <div class="menu__header">
    <Logo />
    <CloseMenuBtn />
  </div>

  <MenuNavigation />
  <MenuOptions />
</div>

<style>
  .menu {
    position: fixed;
    inset: 0;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: calc(100% + 1rem);
    background: var(--background-color) url(../../assets/images/bg.webp) no-repeat
      fixed;
    background-size: cover;
    border-bottom: 1rem solid var(--primary-color);
    transform: translateY(calc(-100% - 1rem));
    transition: transform 0.6s ease-in-out;
  }
  .menu--active {
    transform: translateY(0);
  }

  .menu__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2.5rem;
    width: 100%;
    height: max-content;
    border-bottom: 0.2rem solid var(--gray-color-transparent);
  }
</style>

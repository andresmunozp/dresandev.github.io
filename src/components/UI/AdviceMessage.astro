      </svg>
    </button>
  </div>
</div>

<style>
  .card-container--close {
    max-height: 0;
    overflow: hidden;
  }

  .card {
    margin-top: 2.5rem;
    padding: 1rem;
    display: flex;
    align-items: flex-start;
    background-color: var(--secondary-color-transparent);
    border: 0.05rem solid var(--secondary-color);
    border-radius: 0.3rem;
    font-size: 1.6rem;
    transition: transform 0.3s ease-in-out;
  }

  .card__close-btn svg {
    width: 1.6rem;
    height: 1.6rem;
  }

  .card__close-btn {
    padding: 0.5rem;
  }

  @media screen and (min-width: 768px) {
    .card-container {
      display: none;
    }
  }
</style>

<script>
  const card = document.querySelector(".card-container")!;

  card.addEventListener("click", () => {
    card.classList.add("card-container--close");
  });
</script>

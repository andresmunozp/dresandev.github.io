---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="container">
  <h2 class="title">{title}</h2>
  <div class="line"></div>
</div>

<style>
  .container {
    display: flex;
    align-items: center;
    padding-top: 2.5rem;
  }

  .title {
    margin-right: 2rem;
    width: max-content;
  }

  .line {
    width: 100%;
    height: 0.2rem;
    background-color: var(--gray-color-transparent);
  }
</style>

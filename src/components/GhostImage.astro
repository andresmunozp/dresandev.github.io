---
import ghost from "../assets/images/ghost.svg";
import shadow from "../assets/images/shadow.svg";
---

<div class="image">
  <img class="image__ghost" src={ghost} alt="ghost pixel art" />
  <img class="image__shadow" src={shadow} alt="shadow of ghost" />
</div>

<style>
  .image {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .image__ghost {
    width: 10rem;
    height: 11.459rem;
    animation: bouncing 1.5s ease infinite;
  }

  .image__shadow {
    width: 6rem;
    height: 3rem;
    animation: shadow 1.5s ease infinite;
  }

  @keyframes bouncing {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-1rem);
    }
    100% {
      transform: translateY(0);
    }
  }

  @keyframes shadow {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
    100% {
      transform: scale(1);
    }
  }
</style>

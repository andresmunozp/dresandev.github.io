---
import { Logo, CloseButton, Navigation, MenuOptions } from "./";
---

<div class="menu">
  <div class="menu__header">
    <Logo />
    <CloseButton />
  </div>

  <Navigation />
  <MenuOptions />
</div>

<style>
  .menu {
    position: fixed;
    inset: 0;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: calc(100% + 1rem);
    background: var(--background-color) url(../assets/images/background.jpg)
      no-repeat fixed;
    background-size: cover;
    border-bottom: 1rem solid var(--primary-color);
    transform: translateY(-100%);
    transition: transform 0.8s ease-in-out;
  }
  .menu--active {
    transform: translateY(0);
  }

  .menu__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 2.5rem;
    width: 100%;
    height: max-content;
    border-bottom: 0.2rem solid var(--gray-color-transparent);
  }
</style>

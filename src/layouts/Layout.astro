---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
		<meta name="msapplication-TileColor" content="#603cba" />
		<meta name="theme-color" content="#ffffff" />
		<title>{title}</title>
		<meta name="title" content="Javier Andres Web portfolio" />
		<meta
			name="description"
			content="Web portfolio as a Frontend developer with my most recent projects. Take a look at my works and contact me if you have any questions or projects in mind."
		/>
		<meta
			name="keywords"
			content="Frontend Developer, Web portfolio, Web development, HTML, CSS, JavaScript, React, Flutter, Responsive design, Web accessibility, Testing and debugging, Speed optimization, API integration, Git, Version control, Mobile development, UI/UX design , SASS, Bootstrap, Animations and transitions, Progressive Web Apps (PWA), SEO"
		/>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<meta name="language" content="English" />
		<meta name="author" content="Javier Andres / Dresan" />
		<meta name="robots" content="index, follow" />

		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://dresandev.github.io/" />
		<meta property="og:title" content="Javier Andres Frontend developer 👋🏼" />
		<meta
			property="og:description"
			content="Web portfolio as a Frontend developer with my most recent projects. Take a look at my works and contact me if you have any questions or projects in mind."
		/>
		<meta property="og:image" content="./banner.png" />
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://dresandev.github.io/" />
		<meta
			property="twitter:title"
			content="Javier Andres Frontend developer 👋🏼"
		/>
		<meta
			property="twitter:description"
			content="Web portfolio as a Frontend developer with my most recent projects. Take a look at my works and contact me if you have any questions or projects in mind."
		/>
		<meta property="twitter:image" content="./banner.png" />
	</head>
	<body>
		<slot />
	</body>
</html>

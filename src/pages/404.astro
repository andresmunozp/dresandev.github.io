---
import SimpleLayout from "../layouts/SimpleLayout.astro";

import GoHomeBtn from "../components/UI/GoHomeBtn.astro";
---

<SimpleLayout title="404: Not Found">
  <h1>Not Found</h1>
  <p>Sorry, there is nothing at this URL.</p>
  <GoHomeBtn />
</SimpleLayout>

<style>
  h1 {
    font-size: clamp(5.5rem, 5vw, 100rem);
